/* pages/musicDemo/musicDemo.wxss */
page{ background-color: #f5f5f5; }
.audio-container{ width: 100%; height: auto; overflow: hidden;}
.audio-container .aud-mod{  width: 100%;   text-align: center;}
.aud-mod{ width: 100%; height: 280rpx; overflow: hidden; position: relative;}
.aud-poster{ width: 280rpx; height: 280rpx; border-radius: 50%;  overflow: hidden; margin: 0 auto;}
.aud-poster .img{ width: 100%; height: 100%;  }
.aud-poster .img.playing{ animation:circle 10s infinite linear;}
@keyframes circle{
    from{ transform:rotate(0deg); }
    to{ transform:rotate(360deg); }
}
.aud-mod .mod{ width: 100rpx; height: 100rpx; background-repeat: no-repeat; background-size: cover;
 position: absolute;  left: 50%;top: 50%;  transform: translate(-50%,-50%);}
.aud-progress{ float: left; width: 540rpx; height: 100%;  margin: 0 auto; position: absolute; z-index: 2; opacity: 0;}
.aud-progress .slider{ width: 100%; margin: 0 !important; position: absolute; left: 0; top: 0; z-index: 1;} 
.aud-chang{ width: 100%; height: 6rpx; background-color: rgb(199, 199, 199); border-radius: 20rpx; overflow: hidden;
  position: absolute; top: 15rpx; }
.aud-chang .cur-hua{ width: 20%; height: 6rpx; background-color:#ff614a; position: absolute; left: 0; top: 0;}
.mv-area{ width: 540rpx; height: 32rpx; background:transparent;  position: absolute; left: 50%; transform: translateX(-50%); top:5rpx; }
.mv-view{ width: 20%; padding: 0 7rpx; height: 32rpx; line-height: 32rpx; background: #6c6c6c; border-radius: 16rpx;
position: absolute; left: 0; top: 0; z-index: 2; 
transform:translateX(0px) translateY(0px) translateZ(0px) scale(1) !important; }
.aud-kong{ width: 100%; height: 80rpx; padding: 0 30rpx; margin-top: 25rpx; box-sizing: border-box; position: relative;}
.kongTime{ width: 100%; height: 100%; color: #fff; font-size: 16rpx; text-align: center;}
.forwardTime,.backTime{ width:46rpx; height: 80rpx; text-align: center; position: absolute; top: 0; }
.forwardTime{ right: 35rpx;}
.backTime{ left: 35rpx; }
.forwardTime .i,.backTime .i{ width: 46rpx; height: 42rpx; background-repeat: no-repeat; background-size: cover;}
.forwardTime .t,.backTime .t{ color: #333; font-size: 22rpx; display: block; line-height: 1;}

.aud-menu{ width: 100%; height: 150rpx; overflow: hidden; padding: 40rpx 30rpx 0; box-sizing: border-box;}
.aud-menu .ite{ width: 54rpx; height: auto; overflow: hidden; float: left; text-align: center;}
.aud-menu .ite .ico{ width: 50rpx; height: 40rpx; display: inline-block;  background-repeat: no-repeat; background-size: cover;}
.aud-menu .ite .ti{ color: #333; font-size:22rpx; display: block;}
.aud-menu .ite:last-of-type{ float: right; }
.aud-menu .ite:nth-of-type(2),.aud-menu .ite:nth-of-type(3){ margin-left: 160rpx;}

.explain{ width: 100%; color: #333; font-size: 30rpx; padding: 30rpx; box-sizing: border-box;}



